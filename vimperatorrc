" .vimperatorrc

" Titlebar
set titlestring="Firefox"

" Search
set incsearch
set hlsearch
set smartcase

" Commandline and Statusline
highlight CmdLine color: #999; background: #111; font-family: terminus; font-size: 11px; padding: 0px; vertical-align: middle; border: none;
highlight StatusLine color: #999; background: #111; font-family: terminus; font-size: 11px; margin-top: 0px;

" Hints
set hintchars=qwertuiopasdfghjkl
highlight Hint font-family: terminus; font-weight: bold; border: 1px solid black; color: black; background-color: #fffcc8

" Faster scrolling 
nnoremap j 3j
nnoremap k 3k

" passAllKeys
autocmd LocationChange .*                                               js modes.passAllKeys = false
autocmd LocationChange panel-beta\\.bytemark\\.co\\.uk/vnc/*            js modes.passAllKeys = true
autocmd LocationChange cloud\\.digitalocean\\.com/droplets/*            js modes.passAllKeys = true

