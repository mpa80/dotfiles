" .vimperatorrc

" Titlebar
set titlestring="Firefox"

" Search
set incsearch
set hlsearch
set smartcase

" Commandline and Statusline
highlight CmdLine color: #999; background: #111; font-family: Pragmata Pro; font-size: 13px; padding: 2px; vertical-align: middle; border: none;
highlight StatusLine color: #999; background: #111; font-family: Pragmata Pro; font-size: 13px; margin-top: 0px;

" Hints
set hintchars=qwertuiopasdfghjkl
highlight Hint font-family: Pragmata Pro; font-size: 14px; font-weight: bold; border: 1px solid black; color: black; background-color: #fffcc8

" Faster scrolling 
nnoremap j 3j
nnoremap k 3k

" passAllKeys
autocmd LocationChange .*                                               js modes.passAllKeys = false
autocmd LocationChange panel-beta\\.bytemark\\.co\\.uk/vnc/*            js modes.passAllKeys = true
autocmd LocationChange cloud\\.digitalocean\\.com/droplets/*            js modes.passAllKeys = true

" Smart completion workaround for Firefox 49
js services.services.autoCompleteSearch.class_="@mozilla.org/autocomplete/search;1?name=unifiedcomplete"
